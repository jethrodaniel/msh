'use strict';

import 'bootstrap';
import 'bootstrap/dist/css/bootstrap.min.css';

import ReactDOM from 'react-dom';
import React, { Component } from 'react';

import './app.scss'
import Github from './assets/github.svg';
import RubyGems from './assets/rubygems_logo.svg';
import Ruby from './assets/ruby_logo_simple.svg';

import { Clock } from './components/clock'
import { Rotating } from './components/rotating'

const e = React.createElement;
const nbsp = '\u00A0';

const data = [
  <% 100.times do |n| %>
    <%= n %>,
  <% end %>
];

class App extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
    };
  }

  time() {
    return e(Clock, {time: "HH:mm:ss", date: "YYYY-MM-DD"});
  }

  githubLink() {
    return e('a', {href: "<%= Msh.gemspec.homepage %>"},
      e(Github, {id: "github", width: "1em"})
    );
  }

  rubyGemsLink() {
    return e('a', {href: "https://rubygems.org/profiles/jethrodaniel"},
      e(RubyGems, {id: "rubygems", width: "1em"})
    );
  }

  render() {
    return e('container-fluid', {id: 'app'}, [
      e('nav', {key: 0, id: 'nav'}, [
        this.githubLink(),
        this.rubyGemsLink(),
        this.time()
      ]),
      e('div', {key: 1, className: 'row'},
        e('div', {className: 'col', id: 'main'}, [
          e('h4', {id: 'description'}, "<%= Msh.gemspec.summary %>"),
          e(Ruby, {id: "ruby", width: "3em"})
        ])
      )
    ]);
  }
}

ReactDOM.render(
  e(App),
  document.getElementById('root')
);
